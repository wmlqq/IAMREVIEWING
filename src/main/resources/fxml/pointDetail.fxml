<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.myself.iamreviewing.controller.PointDetailController">
    <!-- 顶部导航栏 -->
    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 12px 20px; -fx-border-bottom: 1px solid #e9ecef;">
            <Button fx:id="backBtn" text="返回" style="-fx-background-color: #e9ecef; -fx-text-fill: #495057; -fx-padding: 6px 12px; -fx-border-radius: 4px;" />
            <HBox spacing="20" alignment="CENTER" style="-fx-padding: 0 20px;" fx:id="navButtons">
                <Button fx:id="prevBtn" text="上一个" style="-fx-background-color: #e9ecef; -fx-text-fill: #495057; -fx-padding: 6px 12px; -fx-border-radius: 4px;" />
                <Button fx:id="nextBtn" text="下一个" style="-fx-background-color: #e9ecef; -fx-text-fill: #495057; -fx-padding: 6px 12px; -fx-border-radius: 4px;" />
            </HBox>
        </HBox>
    </top>

    <!-- 主内容区 - 类似文章/笔记的布局 -->
    <center>
        <ScrollPane style="-fx-background-color: #f5f5f5; -fx-padding: 20px;">
            <!-- 大框A - 主体内容容器 -->
            <VBox fx:id="mainContainer" style="-fx-background-color: white; -fx-border-radius: 8px; -fx-padding: 40px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 4); -fx-max-width: 1400px; -fx-alignment: CENTER; -fx-margin: 0 auto;">
                <!-- 知识点标题 -->
                <Label fx:id="pointTitle" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2d3748; -fx-margin-bottom: 20px;" />
                
                <!-- 知识点基本信息 - 紧凑布局 -->
                <VBox fx:id="pointInfo" style="-fx-background-color: #f7fafc; -fx-padding: 20px; -fx-border-radius: 6px; -fx-margin-bottom: 30px;">
                    <GridPane hgap="30" vgap="12">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="100" halignment="RIGHT" />
                            <ColumnConstraints prefWidth="200" />
                            <ColumnConstraints prefWidth="100" halignment="RIGHT" />
                            <ColumnConstraints prefWidth="200" />
                        </columnConstraints>

                        <Label text="名称:" style="-fx-font-weight: 500; -fx-text-fill: #4a5568;" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <Label fx:id="detailName" style="-fx-text-fill: #2d3748;" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                        
                        <Label text="分类:" style="-fx-font-weight: 500; -fx-text-fill: #4a5568;" GridPane.rowIndex="0" GridPane.columnIndex="2" />
                        <Label fx:id="detailCategory" style="-fx-text-fill: #2d3748;" GridPane.rowIndex="0" GridPane.columnIndex="3" />

                        <Label text="难度:" style="-fx-font-weight: 500; -fx-text-fill: #4a5568;" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <Label fx:id="detailDifficulty" style="-fx-text-fill: #2d3748;" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                        
                        <Label text="掌握:" style="-fx-font-weight: 500; -fx-text-fill: #4a5568;" GridPane.rowIndex="1" GridPane.columnIndex="2" />
                        <Label fx:id="detailMemoried" style="-fx-text-fill: #2d3748;" GridPane.rowIndex="1" GridPane.columnIndex="3" />

                        <Label text="创建:" style="-fx-font-weight: 500; -fx-text-fill: #4a5568;" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <Label fx:id="detailCreateDate" style="-fx-text-fill: #2d3748;" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    </GridPane>
                </VBox>
                
                <!-- 知识点描述 -->
                <VBox style="-fx-margin-bottom: 30px;">
                    <Label text="知识点描述:" style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-text-fill: #2d3748; -fx-margin-bottom: 12px;" />
                    <TextArea fx:id="detailDesc" wrapText="true" editable="false" 
                             style="-fx-background-color: transparent; -fx-border: none; -fx-font-size: 16px; -fx-line-spacing: 1.5; -fx-text-fill: #4a5568; -fx-padding: 0;" />
                </VBox>
                
                <!-- 附件内容展示区域 -->
                <VBox fx:id="allAttachments" style="-fx-line-spacing: 1.5;" />
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>